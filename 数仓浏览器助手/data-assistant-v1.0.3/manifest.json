{
    "manifest_version": 3,
    "name": "数仓开发提效工具",
    "version": "1.0.3",
    "description": "一款数仓开发提效工具，包含AI问答、SQL转换和工作流补数功能",
    "icons": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    "action": {
      "default_icon": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
      }
    },
    "permissions": [
      "storage",
      "clipboardWrite",
      "activeTab",
      "scripting",
      "sidePanel",
      "tabs",
      "cookies"
    ],
    "host_permissions": [
       "https://dp.gz.cvte.cn/*","https://newdp.gz.cvte.cn/*"
    ],
    "background": {
      "service_worker": "background/background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://dp.gz.cvte.cn/*","https://newdp.gz.cvte.cn/*"],
        "js": ["content/content.js"],
        "css": ["content/content.css"]
      }
    ],
    "side_panel": {
      "default_path": "sidebar/sidebar.html"
    }
  }